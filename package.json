{
  "name": "@hugojosefson/example-cli",
  "version": "3.0.1",
  "description": "Example Node.js CLI app.",
  "main": "./cjs/index.js",
  "module": "./src/index.mjs",
  "bin": {
    "example-cli": "src/cli.mjs"
  },
  "files": [
    "src",
    "cjs",
    "package.json",
    "yarn.lock",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "start": "src/cli.mjs",
    "prepare": "npm-run-all build-cjs documentation lint-readme",
    "build-cjs": "rollup src/index.mjs --file cjs/index.js --format cjs --external fs --exports named --outro 'if(exports.default){Object.assign(exports.default,exports);module.exports=exports.default}'",
    "lint": "prettier --write 'src/**/*.{js,mjs,md}' './*.{js,mjs,md}'",
    "lint-readme": "prettier --write README.md",
    "documentation": "documentation readme --markdown-toc=false --access=public --resolve=node --quiet --shallow --format=md --section=API src/index.mjs",
    "test": "npm-run-all lint documentation lint-readme mocha",
    "mocha": "nyc mocha",
    "npm-audit": "npm install --package-lock-only && npm audit; rm package-lock.json",
    "coveralls": "nyc report --reporter=text-lcov | coveralls"
  },
  "author": "Hugo Josefson <hugo@josefson.org> (https://www.hugojosefson.com/)",
  "repository": "hugojosefson/nodejs-example-cli",
  "license": "MIT",
  "keywords": [
    "node",
    "nodejs",
    "cli",
    "bin",
    "esmodule",
    "example",
    "template"
  ],
  "mocha": {
    "spec": "test/*-test.mjs"
  },
  "nyc": {
    "extension": [".mjs"],
    "all": true,
    "include": [
      "src/**/*.mjs"
    ],
    "exclude": [
      "./.*/**",
      "node_modules/**",
      "cjs/**",
      "test/**"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{mjs,js,jsx}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "coveralls": "^3.0.11",
    "documentation": "^13.0.1",
    "eslint": "^7.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.2",
    "mocha": "^7.2.0",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "prettier": "^2.0.5",
    "rollup": "^2.13.1"
  },
  "dependencies": {
    "term-size": "^2.2.0",
    "yargs": "^15.3.1"
  },
  "engines": {
    "node": ">=8.0.0"
  }
}

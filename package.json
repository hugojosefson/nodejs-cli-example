{
  "name": "@hugojosefson/example-cli",
  "version": "2.1.0",
  "description": "Example Node.js CLI app.",
  "type": "module",
  "main": "src/api.js",
  "files": [
    "bin",
    "src"
  ],
  "bin": {
    "example-cli": "bin/example-cli"
  },
  "scripts": {
    "start": "bin/example-cli You",
    "test": "run-s lint set-commonjs mocha; run-s set-module",
    "mocha": "mocha -r esm",
    "lint": "standard",
    "prepare": "run-s documentation",
    "documentation": "documentation readme --section=API --shallow --format=md src/api.js",
    "set-commonjs": "replace '\"type\": \"module\"' '\"type\": \"commonjs\"' package.json",
    "set-module": "replace '\"type\": \"commonjs\"' '\"type\": \"module\"' package.json"
  },
  "lint-staged": {
    "*.{mjs,js,jsx}": [
      "standard --fix"
    ]
  },
  "repository": "hugojosefson/nodejs-example-cli",
  "keywords": [
    "node",
    "nodejs",
    "cli",
    "bin",
    "esmodule",
    "example",
    "template"
  ],
  "author": "Hugo Josefson <hugo@josefson.org> (https://www.hugojosefson.com/)",
  "license": "MIT",
  "engines": {
    "node": ">=12.0.0"
  },
  "devDependencies": {
    "documentation": "^12.1.4",
    "esm": "^3.2.25",
    "husky": "^4.2.1",
    "lint-staged": "^10.0.7",
    "mocha": "^7.0.1",
    "npm-run-all": "^4.1.5",
    "replace": "^1.1.5",
    "standard": "^14.3.1"
  },
  "dependencies": {},
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
